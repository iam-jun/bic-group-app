{
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "jsx": "react",
    "module": "commonjs",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": false,
    "target": "esnext",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
  },
  "include": [
    "src/**/*",
    "assets/**/*",
    "App.tsx",
    "*.d.ts",
    "wdyr.js"
  ],
  "exclude": [
    "build",
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
     "**/*.test.ts",
     "**/*.test.tsx",
     "src/test/**/*",
    "src/screens/Menu/ComponentCollection/*.tsx"
  ]
}
