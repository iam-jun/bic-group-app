default_platform(:ios)
fastlane_require "dotenv"

platform :ios do
  before_all do
    setup_circle_ci
  end

  lane :setup do
    match(type: "development",
    storage_mode: "git",
    git_url: "git@bitbucket.org:anhthien-evol/bein-group-app-secret.git",
    app_identifier: ["com.evol.bein.group.development", "com.evol.bein.group.staging"],
    readonly: true)
  end

